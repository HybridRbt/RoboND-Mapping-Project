<?xml version='1.0'?>

<robot name="map_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find map_robot)/urdf/map_robot.gazebo"/>

    <material name="light_blue">
        <color rgba="0 170 255 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="slightly_yellow">
        <color rgba="255 255 204 1"/>
    </material>

    <link name="base_footprint"></link>

    <joint name="base_footprint_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="base_footprint"/>
        <child link="chassis"/>
    </joint>

    <link name='chassis'>
        <pose>0 0 0.1 0 0 0</pose>

        <inertial>
            <mass value="15.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>

        <collision name='collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <cylinder radius="0.2" length="0.15"/>
            </geometry>
        </collision>

        <visual name='chassis_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <cylinder radius="0.2" length="0.15"/>
            </geometry>
            <material name="light_blue"/>
        </visual>

        <collision name='back_caster_collision'>
            <origin xyz="-0.13 0 -0.075" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.0499"/>
            </geometry>
        </collision>

        <visual name='back_caster_visual'>
            <origin xyz="-0.13 0 -0.075" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="slightly_yellow"/>
        </visual>

        <collision name='front_caster_collision'>
            <origin xyz="0.13 0 -0.075" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.0499"/>
            </geometry>
        </collision>

        <visual name='front_caster_visual'>
            <origin xyz="0.13 0 -0.075" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="slightly_yellow"/>
        </visual>
    </link>

    <joint type="continuous" name="left_wheel_hinge">
        <origin xyz="0 0.13 -0.025" rpy="0 0 0"/>
        <child link="left_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <link name='left_wheel'>
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>

        <collision name='left_wheel_collision'>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>

        <visual name='left_wheel_visual'>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint type="continuous" name="right_wheel_hinge">
        <origin xyz="0 -0.13 -0.025" rpy="0 0 0"/>
        <child link="right_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <link name='right_wheel'>
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>

        <collision name='right_wheel_collision'>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>

        <visual name='right_wheel_visual'>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name='camera_link'>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0.0 0 0" rpy="${pi/2} 0 0"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>

        <collision name='camera_collision'>
            <origin xyz="0.0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <box size=".05 .05 .05"/>
            </geometry>
        </collision>

        <visual name='camera_visual'>
            <origin xyz="0.0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <box size=".05 .05 .05"/>
            </geometry>
        </visual>
    </link>

    <joint type="fixed" name="camera_joint">
        <origin xyz="0.3 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
        <child link="camera_link"/>
        <parent link="chassis"/>
    </joint>

    <link name='hokuyo'>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>

        <collision name='hokuyo_collision'>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".1 .1 .1"/>
            </geometry>
        </collision>

        <visual name='hokuyo_visual'>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <mesh filename="package://map_robot/meshes/hokuyo.dae"/>
            </geometry>
        </visual>
    </link>

    <joint type="fixed" name="hokuyo_joint">
        <origin xyz="0 0 .1" rpy="0 0 0"/>
        <child link="hokuyo"/>
        <parent link="chassis"/>
    </joint>

</robot>
